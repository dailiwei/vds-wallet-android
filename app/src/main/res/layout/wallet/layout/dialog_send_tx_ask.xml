<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:aapt="http://schemas.android.com/aapt">
    <data>
        <variable name="txInfo" type="vdsMain.transaction.TxInfo"/>
    </data>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="true"
                      android:paddingStart="@dimen/spacing"
                      android:paddingEnd="@dimen/spacing">
            <LinearLayout
                    android:orientation="vertical" android:background="@drawable/card_radius_12_shape_v"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:paddingStart="@dimen/wallet_card_margin" android:paddingEnd="@dimen/wallet_card_margin">
                <TextView android:textSize="17dp" android:textColor="@color/title" android:gravity="center"
                          android:layout_width="match_parent" android:layout_height="44dp"/>
                <View android:background="@color/dialog_divider_btc" android:layout_width="match_parent"
                      android:layout_height="0.5dp"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                              android:layout_height="wrap_content" android:layout_marginTop="8dp">
                    <TextView android:textColor="@color/wallet_gray" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                    <TextView android:textColor="@color/wallet_gray" android:ellipsize="middle"
                              android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true"
                              android:layout_weight="1" android:layout_marginStart="5dp"
                              android:layout_marginEnd="5dp"/>
                    <TextView android:textSize="13dp" android:textColor="@color/balance_v"
                              android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:minHeight="15dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                              android:layout_height="wrap_content" android:layout_marginTop="8dp">
                    <TextView android:textColor="@color/wallet_gray" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                    <TextView android:textColor="@color/wallet_gray" android:ellipsize="middle"
                              android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true"
                              android:layout_weight="1" android:layout_marginStart="5dp"
                              android:layout_marginEnd="5dp"/>
                    <TextView android:textSize="13dp" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:minHeight="15dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                              android:layout_height="wrap_content" android:layout_marginTop="8dp">
                    <TextView android:textColor="@color/wallet_gray" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                    <TextView android:textColor="@color/wallet_gray" android:ellipsize="middle"
                              android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true"
                              android:layout_weight="1" android:layout_marginStart="5dp"
                              android:layout_marginEnd="5dp"/>
                    <TextView android:textSize="13dp" android:layout_width="wrap_content"
                              android:layout_height="wrap_content" android:minHeight="15dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                              android:layout_height="wrap_content" android:layout_marginTop="8dp"
                              android:layout_marginBottom="@dimen/spacing">
                    <TextView android:textColor="@color/wallet_gray" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                    <TextView android:textSize="13dp" android:gravity="end" android:layout_width="0dp"
                              android:layout_height="wrap_content" android:minHeight="15dp" android:layout_weight="1"/>
                </LinearLayout>
                <View android:background="@color/dialog_divider_v" android:layout_width="match_parent"
                      android:layout_height="0.5dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal"
                              android:layout_width="match_parent" android:layout_height="44dp">
                    <TextView android:textColor="@color/wallet_gray" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                    <TextView android:textSize="18dp" android:gravity="end" android:layout_width="0dp"
                              android:layout_height="wrap_content" android:minHeight="20dp" android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                <TextView android:textColor="@drawable/primary_text_selector_v" android:id="@+id/confirm_text"
                          android:background="@drawable/blue_radius_12_shape" android:layout_width="match_parent"
                          android:layout_height="44dp" android:layout_marginTop="@dimen/spacing"/>
                <TextView android:textColor="@drawable/second_text_selector_btc" android:id="@+id/cancel_text"
                          android:background="@drawable/blue_radius_12_shape" android:layout_width="match_parent"
                          android:layout_height="44dp" android:layout_marginTop="@dimen/spacing"
                          android:layout_marginBottom="@dimen/spacing"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
