<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable name="partWallet" type="com.vcwallet.core.part.PartWallet"/>
    </data>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:id="@+id/head_layout2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="135dp">

        <!-- android:visibility="@{partWallet.isEdit? View.VISIBLE:View.GONE}" -->
        <ImageView
            tools:visibility="visible"
            android:visibility="@{partWallet.isEdit? View.VISIBLE:View.GONE}"
            android:id="@+id/check"
            tools:src="@drawable/icon_round_1s"
            android:src="@{partWallet.isSelect?@drawable/icon_round_1s:@drawable/icon_weixianzhong}"
            android:layout_gravity="center_vertical"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="28dp"
            />

        <LinearLayout
            android:id="@+id/top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="18dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:background="@drawable/bg_wallet_normal2"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    tools:text="label"
                    android:text="@{partWallet.label}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/wallet_select_label"/>
                <ImageView
                    android:visibility="@{partWallet.isEdit?View.GONE:View.VISIBLE}"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@{partWallet.isSelect?@drawable/icon_round_1s:@drawable/icon_round_blue}"
                    tools:src="@drawable/icon_round_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    tools:text="20200"
                    android:text="@{partWallet.balance}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
                <ImageView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_v_white_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="普通地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/wallet_select_label"
                        />
                    <TextView
                        setIntTextView="@{partWallet.generalNumber}"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/wallet_select_label"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView

                        android:text="VID地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/wallet_select_label"/>
                    <TextView
                        setIntTextView="@{partWallet.vidNumber}"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/wallet_select_label"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="VID+地址"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/wallet_select_label"/>
                    <TextView
                        setIntTextView="@{partWallet.vxdNumber}"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/wallet_select_label"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>