<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/teod"
            android:gravity="center_horizontal">
        <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="312dp"
                android:paddingRight="22dp"
                android:paddingLeft="22dp"
                android:background="@drawable/detailtran_qtcode_dialogshdow"
                android:layout_height="184dp">

                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center_horizontal"
                    android:text="修改备注名称"
                    android:textColor="@color/bar_title"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"/>

                <EditText
                        android:layout_marginTop="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/input_back"
                        android:textColor="#646B7B"
                        android:textSize="12sp"
                        android:paddingLeft="12dp"
                        android:textCursorDrawable="@null"
                        android:hint="添加/修改备注"
                        android:textColorHint="#646B7B"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/editText"/>
            <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/input_back"
                    android:layout_height="1dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="50.0"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/confirm"
                        android:layout_height="match_parent">

                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                    >
                        <TextView
                                android:text="@string/confirm"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/resync_back_selected"/>
                    </TableRow>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/input_back"
                    android:layout_height="match_parent">


                </View>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="50.0"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/cancel"
                        android:layout_height="match_parent">


                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                    >
                        <TextView
                                android:text="@string/cancel"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bar_title"/>
                    </TableRow>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>
